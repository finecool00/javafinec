package quiz22;

import java.io.BufferedReader;
import java.io.FileInputStream;
import java.io.InputStreamReader;

public class RegexQuiz03 {

	public static void main(String[] args) {
	
		/*
		 * 1.버퍼리더를 사용해서 건담.txt를 한줄씩! 읽어들입니다.
		 * 2.정규표현식을 이용해서 날짜, 지점, 등급, 내용, 가격을 패턴분석
		 *   Product객체에 저장하고, 리스트에 저장
		 * 
		 * 4.외부라이브러리(POI) - 자바에서 엑셀파일 xlsx 형태로 파일을 쓸수 있도록하는 기능
		 * 	 하나의 시트에 각 행데이터를 엑셀 파일로 출력
		 */
		
		
		String path = "C:\\Users\\user\\Desktop\\course\\java\\work\\Quiz\\src\\quiz22\\건담.txt";

		try(BufferedReader br = new BufferedReader(new InputStreamReader(new FileInputStream(path), "EUC-KR"))) {
			
			String str;
			while((str = br.readLine()) != null) {
				String[] arr = str.split(",", 5);
				
				String day = arr[0];
				String store = arr[1];
				String grade = arr[2];
				String detail = arr[3];
				String price = arr[4];
				
				
				
			}
			
			
		} catch (Exception e) {
			e.printStackTrace();
		}
		
		
		
		
	}
	
	
}
